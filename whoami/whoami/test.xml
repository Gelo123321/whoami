<?xml version="1.0" ?>
<States>
    <MENU>
        <TEXTURES>
            <texture filename="resources/img/play.png" ID="playbutton"/>
            <texture filename="resources/img/options.png" ID="optionsbutton"/>
            <texture filename="resources/img/exit.png" ID="exitbutton"/>
        </TEXTURES>
        
        <OBJECTS>
            <object type="MenuButton" x="256" y="176" width="128" height="32" textureID="playbutton" numFrames="0" callbackID="1"/>
            <object type="MenuButton" x="256" y="224" width="128" height="32" textureID="optionsbutton" numFrames="0" callbackID="2"/>
            <object type="MenuButton" x="256" y="272" width="128" height="32" textureID="exitbutton" numFrames="0" callbackID="3"/>
        </OBJECTS>
    </MENU>

    <OPTIONS>
        <TEXTURES>
            <texture filename="resources/img/main.png" ID="mainbutton"/>
        </TEXTURES>
        
        <OBJECTS>
            <object type="MenuButton" x="256" y="224" width="128" height="32" textureID="mainbutton" numFrames="0" callbackID="1"/>
        </OBJECTS>
    </OPTIONS>

    
    <PLAY>
        <TEXTURES>
            <texture filename="resources/img/helicopter.png" ID="helicopter"/>
            <texture filename="resources/img/helicopter2.png" ID="helicopter2"/>
        </TEXTURES>
        
        <OBJECTS>
            <object type="Player" x="500" y="100" width="128" height="55" textureID="helicopter" numFrames="4"/>
            <object type="Enemy" x="100" y="100" width="128" height="55" textureID="helicopter2" numFrames="4"/>
        </OBJECTS>
    </PLAY>
    
    <PAUSE>
        <TEXTURES>
            <texture filename="resources/img/resume.png" ID="resumebutton"/>
            <texture filename="resources/img/main.png" ID="mainbutton"/>
        </TEXTURES>
        
        <OBJECTS>
            <object type="MenuButton" x="256" y="200" width="128" height="32" textureID="mainbutton" numFrames="0" callbackID="1"/>
            <object type="MenuButton" x="256" y="248" width="128" height="32" textureID="resumebutton" numFrames="0" callbackID="2"/>
        </OBJECTS>
    </PAUSE>

    
    <GAMEOVER>
        <TEXTURES>
            <texture filename="resources/img/gameover.png" ID="gameovertext"/>
            <texture filename="resources/img/main.png" ID="mainbutton"/>
            <texture filename="resources/img/restart.png" ID="restartbutton"/>
        </TEXTURES>
        
        <OBJECTS>
            <object type="AnimatedGraphic" x="256" y="176" width="128" height="32" textureID="gameovertext" numFrames="3" animSpeed="3"/>
            <object type="MenuButton" x="256" y="224" width="128" height="32" textureID="mainbutton" numFrames="0" callbackID="1"/>
            <object type="MenuButton" x="256" y="272" width="128" height="32" textureID="restartbutton" numFrames="0" callbackID="2"/>
        </OBJECTS>
    </GAMEOVER>
</States>
